<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- === Craftmanship === -->

  <!-- Crafting Bench -->
  <ThingDef ParentName="BenchBase">
    <defName>RNS_CraftingBench</defName>
    <label>crafting bench</label>
    <description>A simple bench stocked with equally simple tools meant to assist in the crafting of primitive goods and weapons.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/CraftingBench</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>3</drawSize>
      <shaderType>CutoutComplex</shaderType>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <size>(3, 1)</size>
    <rotatable>true</rotatable>
    <defaultPlacingRot>North</defaultPlacingRot>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <surfaceType>Item</surfaceType>
    <passability>PassThroughOnly</passability>
    <pathCost>60</pathCost>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0, 0, -1)</interactionCellOffset>
    <building>
      <paintable>true</paintable>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
    </building>
    <statBases>
      <Flammability>1.0</Flammability>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkTableWorkSpeedFactor>1.0</WorkTableWorkSpeedFactor>
      <WorkToBuild>2000</WorkToBuild>
    </statBases>
    <useHitPoints>true</useHitPoints>
    <costList>
      <Steel>30</Steel>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <designationCategory>Production</designationCategory>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <researchPrerequisites>
      <li>RNS_Craftmanship</li>
    </researchPrerequisites>
    <techLevel>Medieval</techLevel>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <modExtensions>
      <li Class="RecipeInheritance.ThingDefExtension">
        <inheritRecipesFrom>
          <li>CraftingSpot</li>
        </inheritRecipesFrom>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- Smeltorium -->
  <ThingDef ParentName="BuildingBase">
    <defName>RNS_Smeltorium</defName>
    <label>Smeltorium</label>
    <description>A combination of smelter and crematorium meant for disposal or recycle of unneeded junk or bodies.</description>
    <thingClass>Building_WorkTable_HeatPush</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/Smeltorium</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>4</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <drawerType>RealtimeOnly</drawerType>
    <staticSunShadowHeight>0.4</staticSunShadowHeight>
    <size>(3, 2)</size>
    <rotatable>true</rotatable>
    <defaultPlacingRot>North</defaultPlacingRot>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>1</fillPercent>
    <surfaceType>Item</surfaceType>
    <passability>Impassable</passability>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0, 0, -1)</interactionCellOffset>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building>
      <spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
      <heatPerTickWhileWorking>0.32</heatPerTickWhileWorking>
      <forceShowRoomStats>true</forceShowRoomStats>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <paintable>true</paintable>
    </building>
    <statBases>
      <Beauty>-10</Beauty>
      <Cleanliness>-20</Cleanliness>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>4500</WorkToBuild>
    </statBases>
    <useHitPoints>true</useHitPoints>
    <costList>
      <Steel>30</Steel>
    </costList>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <designationCategory>Production</designationCategory>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <researchPrerequisites>
      <li>RNS_Craftmanship</li>
    </researchPrerequisites>
    <techLevel>Medieval</techLevel>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(217,112,33,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <heatPerSecond>14</heatPerSecond>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>150.0</fuelConsumptionRate>
        <fuelCapacity>100.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>true</drawOutOfFuelOverlay>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <modExtensions>
      <li Class="RecipeInheritance.ThingDefExtension">
        <inheritRecipesFrom>
          <li>ElectricSmelter</li>
          <li>ElectricCrematorium</li>
        </inheritRecipesFrom>
      </li>
    </modExtensions>
  </ThingDef>

  <!-- === Alchemy === -->

  <!-- Alchemy Refinery -->
  <ThingDef ParentName="BenchBase">
    <defName>RNS_AlchemyRefinery</defName>
    <label>alchemy refinery</label>
    <description>A refinery equipped with various alchemy instruments, cauldron, and measurement devices for producing various alchemical recipes.</description>
    <thingClass>Building_WorkTable</thingClass>
    <graphicData>
      <texPath>Things/Building/Production/AlchemyRefinery</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>4</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <size>(3, 2)</size>
    <rotatable>true</rotatable>
    <defaultPlacingRot>North</defaultPlacingRot>
    <altitudeLayer>Building</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <surfaceType>Item</surfaceType>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0, 0, -1)</interactionCellOffset>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <building>
      <paintable>true</paintable>
    </building>
    <statBases>
      <Flammability>0</Flammability>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>6000</WorkToBuild>
    </statBases>
    <costList>
      <Steel>80</Steel>
    </costList>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <designationCategory>Production</designationCategory>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <researchPrerequisites>
      <li>RNS_Alchemy</li>
    </researchPrerequisites>
    <techLevel>Medieval</techLevel>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>ToolCabinet</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>60.0</fuelConsumptionRate>
        <fuelCapacity>50.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>true</drawOutOfFuelOverlay>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <modExtensions>
      <li Class="RecipeInheritance.ThingDefExtension">
        <inheritRecipesFrom>
          <li>DrugLab</li>
          <li>BiofuelRefinery</li>
          <li MayRequire="Dankpyon.Medieval.Overhaul">DankPyon_AlchemyBench</li>
        </inheritRecipesFrom>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>